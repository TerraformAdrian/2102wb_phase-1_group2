    10_check_path:
        command: pwd
    11_show_path:
        command: ls -lah
    15_echo_date:
        command: sudo date >> /home/ec2-user/date.txt
    16_talk_wall:
        command: "wall DEPLOYED and RUNNING: 00_npm.config - 11_talk_wall "
    20_build_run:
        command: "bash /home/ec2-user/build-run.sh"
