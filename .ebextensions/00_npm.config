files:
  "/home/ec2-user/build-run.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/bin/bash
      cd /var/app/current
      npm run build
      pm2 start api/dist/index.js
      exit 0;
commands:
    00_start_script:
        command: "WALL running 00_npm.config"
    01_install_htop:
        command: sudo yum -y install htop
    03_install_nmap:
        command: sudo yum -y install nmap
    04_install_pm2:
        command: sudo npm i -g pm2
    05_export_pm2_path:  
        export PATH=$PATH:/opt/elasticbeanstalk/node-install/node-v14.18.2-linux-x64/lib/node_modules/pm2/bin
    # adrian: i think this will cause a error.. so i commented out
    # 06_verify_pm2:
